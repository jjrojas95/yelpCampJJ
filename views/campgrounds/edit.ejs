<% include ../partials/header %>

  <div class="row">
    <h1 class="hPageText">Edit
      <%= campground.name %>
    </h1>
    <div class="forms-campgrounds">
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="campground[name]" placeholder="Name" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campground[image]" placeholder="Image url" value="<%= campground.image %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campground[description]" placeholder="Description" value="<%= campground.description %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>

      </form>
      <a href="/campgrounds">Go Back!</a>
    </div>
  </div>




  <% include ../partials/footer %>